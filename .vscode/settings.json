    // iOS Config
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "../cmake/ios.toolchain.cmake",
        "PLATFORM": "OS64",
        "ENABLE_STRICT_TRY_COMPILE": "ON",
